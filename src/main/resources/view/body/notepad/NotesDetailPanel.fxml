<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fitToWidth="true" styleClass="pane-with-rounded-corner, ph"
            hbarPolicy="NEVER"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="10" styleClass="pv">
        <Label fx:id="id" styleClass="label-p" />
        <Label fx:id="title" text="\$title" styleClass="label-h5" wrapText="true" minHeight="-Infinity" />
        <Label fx:id="createdAt" text="\$createdAt" styleClass="label-p" wrapText="true" minHeight="-Infinity" />
        <Label fx:id="body" text="\$body" styleClass="label-p"
               wrapText="true" minHeight="-Infinity" />
    </VBox>
</ScrollPane>
