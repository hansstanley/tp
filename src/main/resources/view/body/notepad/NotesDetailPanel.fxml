<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox spacing="10" styleClass="pane-with-rounded-corner"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="id" styleClass="label-bright" />
    <Label fx:id="title" text="\$title" styleClass="label-title" wrapText="true" minHeight="-Infinity" />
    <Label fx:id="createdAt" text="\$createdAt" styleClass="label-bright" wrapText="true" minHeight="-Infinity" />
    <Label fx:id="body" text="\$body" styleClass="label-bright" wrapText="true" minHeight="-Infinity" />
</VBox>
